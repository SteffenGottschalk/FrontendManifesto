{
  "name": "@project/mono-repository",
  "private": true,
  "author": "@author",
  "license": "MIT",
  "scripts": {
    "build": "lerna run build",
    "start:app": "yarn workspace @project/app start",
    "start:design": "yarn workspace @project/designsystem start",
    "lint": "lerna run lint",
    "test": "lerna run test --parallel -- --ci --coverage --watchAll=false --runInBand"
  },
  "workspaces": {
    "packages": [
      "packages/apps/*",
      "packages/components/*",
      "packages/developer/*"
    ],
    "nohoist": [
      "packages/apps/**/webpack-dev-server",
      "**/babel-loader",
      "**/babel-jest"
    ]
  },
  "devDependencies": {
    "@project/eslint-config": "*",
    "lerna": "4.0.0"
  },
  "eslintConfig": {
    "extends": [
      "@project/eslint-config"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "printWidth": 120,
    "trailingComma": "none",
    "arrowParens": "avoid"
  }
}
