{
  "name": "@project/designsystem",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "start-storybook -p 6006",
    "build": "build-storybook",
    "test:update": "jest --update-snapshot",
    "lint": "eslint \"src/**/*.{js,jsx}\" --fix --max-warnings 5"
  },
  "dependencies": {
    "babel-jest": "26.6.3",
    "prop-types": "15.7.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "web-vitals": "1.0.1"
  },
  "devDependencies": {
    "@project/eslint-config": "*",
    "@storybook/addon-actions": "6.2.8",
    "@storybook/addon-essentials": "6.2.8",
    "@storybook/addon-links": "6.2.8",
    "@storybook/addon-storyshots": "6.2.8",
    "@storybook/node-logger": "6.2.8",
    "@storybook/preset-create-react-app": "3.1.7",
    "@storybook/react": "6.2.8",
    "@testing-library/jest-dom": "5.11.4",
    "@testing-library/react": "11.1.0",
    "@testing-library/user-event": "12.1.10",
    "react-scripts": "4.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.mdx?$": "@storybook/addon-docs/jest-transform-mdx"
    },
    "collectCoverageFrom": [
      "!src/reportWebVitals.js",
      "!src/**/index.js",
      "!src/**/*.(spec|test|stories).{js}",
      "!src/**/*.svg"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 98,
        "branches": 98,
        "functions": 98,
        "lines": 98
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "author": "@author",
  "license": "MIT"
}
